<h1>A Fancy Table</h1>

<div class="container">
  <table id="publications">
    <tr class="title-row">
      <th><%= dato.subtitle.title %></th>
      <th><%= dato.subtitle.publication_date %></th>
      <th><%= dato.subtitle.description %></th>
    </tr>
    <% counter = 1 %>
    <% dato.publications.each do |publication| %>
      <% counter += 1 %>
      <% if counter % 2 == 0 %>
        <tr style="background-color: #f2f2f2;" >
      <% elsif counter % 2 == 1 %>
        <tr style="background-color: #ddd;" >
      <% end %>
          <th class="justified-text"><%= publication.title %></th>
          <th class="text-center lighter-font"><%= publication.date %></th>
          <th class="justified-text lighter-font"><%= publication.description %></th>
      </tr>
    <% end %>
  </table>
</div>
